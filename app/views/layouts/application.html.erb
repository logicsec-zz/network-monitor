<!DOCTYPE html>
<html>
  <head>
    <title>Network Monitor</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>
      <% if user_signed_in? %>
        <div class="navbar navbar-default navbar-fixed-top" role="navigation">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= image_tag("http://www.digicamsecurity.com/portal/lib/tpl/bootstrap3/images/logo_light.png", height: '50') %>
          </div>
          <div class="collapse navbar-collapse">
            <ul class="nav navbar-nav">
              <li><%= link_to "Home",dashboard_index_url, :class => 'text-success' %></li>
              <li><%= link_to "Devices",devices_url, :class => 'text-success' %></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "Add Device",new_device_path, :class => 'text-success' %></li>
              <li><%= link_to('Logout', destroy_user_session_path, method: :delete) %></li>
            </ul>
          </div>
        </div>
      <% end %>
        <div class="container-fluid content padding-top">
          <div class="row">
            <% if notice %>
              <div class="alert alert-success alert-top">
                <i class="icon-exclamation-sign"></i>
                <%= notice %>
              </div>
            <% end %>
            <% if alert %>
              <div class="alert alert-danger alert-top">
                <i class="icon-remove-sign"></i>
                <%= alert %>
              </div>
            <% end %>
            </div>
        	<%= yield %>
        </div>
      </div>
  </body>
</html>
