<main role="main" class="mt-4 px-4">
  <div class="row">
    <table class="table table-striped">
        <thead>
          <button type="button" class="btn btn-info btn-sm float-right mb-3" data-toggle="modal" data-target="#exampleModal">
            <b>+</b> Add New Device
          </button>
          <tr>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">IP Address</th>
              <th scope="col">Status</th>
              <th scope="col">Action</th>
          </tr>
        </thead>
        <% @devices.each do |d| %>
          <tr>
              <td><%= d.id %></td>
              <td><%= link_to d.name,device_path(d) %></td>
              <td><%= d.ip %></td>
              <td><button type="button" class="btn btn-dark btn-sm">Dark</button></td>
              <td>
                <%= link_to edit_device_path(d), :class => "btn btn-dark btn-sm" do %>
                  <i class="fa fa-pencil"></i> Edit
                <% end %>
                <%= link_to device_path(d), method: :delete, :prompt => "Are you sure?", :class => "btn btn-danger btn-sm" do %>
                  <i class="fa fa-close"></i> Delete
                <% end %>
              </td>
          </tr>
        <% end %>
      </table>
    </div>
  </main>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">New Device</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= render 'devices/form' %>
    </div>
  </div>
</div>
