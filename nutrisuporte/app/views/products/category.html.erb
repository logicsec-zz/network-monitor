<div class="wrap page--default">
  <div class="sidebar">
    <%= render partial: 'partials/categories' %>
  </div>
  <div class="content-side">
    <% unless @products.empty? %>
    <section class="products">
      <p>Foram encontrados <strong><%= @products_count %> resultados</strong> para a categoria <strong><%= @current_category.name %></strong></p>
      <%= render partial: 'partials/products', locals: { products: @products } %>
      <%= paginate @products, theme: 'nutrisuporte' %>
    </section>
    <% else %>
    <p><b>Nenhum produto foi encontrado.</b></p>
    <% end %>
  </div>
</div>